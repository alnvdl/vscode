{
    // Side panel:
    // Explorer only and nothing else
    //
    // Bottom panel [alignment: justify]
    // Terminal (tabs at the right)
    // Outline + Problems + Timeline
    // Search + References
    // Source control
    // Testing + Test results
    // Run and debug + Debug console
    // Output
    // Ports
    // Extensions
    //
    // Local extensions:
    // https://marketplace.visualstudio.com/items?itemName=ms-vscode-remote.remote-ssh
    //
    // Remote extensions:
    // https://marketplace.visualstudio.com/items?itemName=ms-python.python
    // https://marketplace.visualstudio.com/items?itemName=golang.go
    // https://marketplace.visualstudio.com/items?itemName=ms-python.flake8
    // https://marketplace.visualstudio.com/items?itemName=ms-python.mypy-type-checker
    // https://marketplace.visualstudio.com/items?itemName=ms-python.black-formatter
    // https://marketplace.visualstudio.com/items?itemName=dbaeumer.vscode-eslint
    "window.titleBarStyle": "custom",
    "remote.SSH.enableAgentForwarding": false,
    "remote.SSH.enableX11Forwarding": false,

    "window.menuBarVisibility": "toggle",
    "extensions.autoUpdate": false,
    "telemetry.telemetryLevel": "off",
    "workbench.enableExperiments": false,
    "window.commandCenter": true,
    "window.title": "${activeEditorMedium}",
    "extensions.ignoreRecommendations": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Monokai Dimmed",
    "workbench.colorCustomizations": {
        "gitDecoration.ignoredResourceForeground": "#7777",
        "gitDecoration.modifiedResourceForeground": "#3b8eea",
        "gitDecoration.addedResourceForeground": "#23d18b",
        "gitDecoration.untrackedResourceForeground": "#b267e6",
        "gitDecoration.conflictingResourceForeground": "#f44747",
        "gitDecoration.submoduleResourceForeground": "#7777",
        "editorRuler.foreground": "#FFFFFF11",
        "sideBarSectionHeader.background": "#00000000",
        "editorOverviewRuler.border": "#00000000",
        "panel.border": "#FFFFFF11",
        "terminal.background": "#272727",
        "panel.background": "#272727",
        "titleBar.activeBackground": "#272727",
        "titleBar.inactiveBackground": "#272727",
        "statusBar.background": "#272727",
        "statusBar.border": "#FFFFFF11"
    },
    "workbench.tree.indent": 16,
    "workbench.tree.enableStickyScroll": true,
    "workbench.editor.openPositioning": "last",
    "workbench.editor.enablePreview": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 8,
    "workbench.iconTheme": "vs-minimal",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.list.smoothScrolling": true,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.tabSizingFixedMaxWidth": 220,
    "workbench.editor.tabSizingFixedMinWidth": 220,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabSizing": "fixed",
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.activityBar.location": "hidden",

    "breadcrumbs.enabled": true,
    "search.collapseResults": "alwaysCollapse",
    "search.searchEditor.reusePriorSearchConfiguration": true,
    "problems.showCurrentInStatus": true,
    "editor.mouseWheelZoom": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingBrackets": "never",
    "editor.rulers": [
        80
    ],
    "editor.lineHeight": 21,
    "editor.minimap.showSlider": "always",
    "editor.suggestSelection": "first",
    "editor.renderWhitespace": "none",
    "editor.suggest.showStatusBar": false,
    "editor.find.autoFindInSelection": "multiline",
    "editor.find.seedSearchStringFromSelection": "selection",
    "editor.find.cursorMoveOnType": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.guides.indentation": false,
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.hideCursorInOverviewRuler": true,
    "editor.stickyScroll.enabled": true,
    "editor.fastScrollSensitivity": 6,
    "editor.occurrencesHighlight": "multiFile",
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "off"
    },
    "[json]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
    },
    "[jsonc]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
    },
    "editor.suggest.localityBonus": true,
    "editor.suggest.matchOnWordStartOnly": false,
    "editor.suggest.preview": true,
    "editor.quickSuggestionsDelay": 500,
    "[plaintext]": {
        "editor.wordWrap": "on",
    },
    "[markdown]": {
        "editor.wordWrap": "on",
    },
    "diffEditor.ignoreTrimWhitespace": false,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.vscode": true,
        "*.egg-info": true,
        "env/": true,
        "build/": true,
        "dist/": true,
        ".vscode/": true,
        "logs/": true,
        ".pytest_cache/": true,
        "*.log": true,
        "*.pyc": true,
        "__pycache__": true,
        "*.db": true,
        "node_modules": true,
    },
    "files.watcherExclude": {
        "**/.gopath/**": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "terminal.integrated.scrollback": 4096,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.localEchoLatencyThreshold": -1,
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.stickyScroll.enabled": true,
    "terminal.integrated.mouseWheelZoom": true,
    "task.autoDetect": "off",
    "emmet.triggerExpansionOnTab": true,
    "remote.autoForwardPorts": false,

    "git.confirmSync": false,
    "git.detectSubmodules": false,
    "git.blame.statusBarItem.enabled": true,
    "git.blame.statusBarItem.template": "${authorName} on ${authorDate}: ${subject}",

    "python.testing.unittestEnabled": true,
    "python.testing.pytestEnabled": true,
    "python.terminal.activateEnvironment": false,
    "[python]": {
        "editor.rulers": [88],
    },
    "black-formatter.args": [
        "--line-length=88"
    ],
    "flake8.args": [
        "--max-line-length=88"
    ],
    "mypy-type-checker.args": [
        "--ignore-missing-imports"
    ],

    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "javascript.preferences.importModuleSpecifier": "non-relative",

    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "go.useLanguageServer": true,
    "gopls": {
        "usePlaceholders": true,
        "staticcheck": true,
    },
    "go.enableCodeLens": {
        "runtest": true,
    },
    "go.testFlags": [
        "-count",
        "1",
        "-coverprofile",
        "/tmp/cover.out"
    ],

    "markdown.preview.fontSize": 18,
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditor": false,
}
